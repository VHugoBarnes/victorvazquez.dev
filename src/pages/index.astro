---
import DownloadCV from "../components/DownloadCV.astro";
import Subtitle from "../components/ui/Subtitle.astro";
import Text from "../components/ui/Text.astro";
import Title from "../components/ui/Title.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
	<div class="space-y-8">
		<Title>Hello, world! 🌎</Title>

		<DownloadCV />

		<div class="md:w-1/2">
			<Text size="text-3xl" className="leading-relaxed">
				<span class="font-bold text-rose-400">Fullstack Web Developer</span> with
				<span class="font-bold text-indigo-400">3+ years of experience</span>.
				From Tamaulipas, Mexico.
			</Text>
		</div>
	</div>

	<div class="space-y-8">
		<Subtitle>Projects 🧑🏾‍💻</Subtitle>

		<Text className="font-bold" size="text-2xl">tgoat.org</Text>
	</div>
</BaseLayout>
