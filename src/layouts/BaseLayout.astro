---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
const props = Astro.props;

let pageTitle = "victorvazquez.dev";

if (props.pageTitle) {
  pageTitle = `${props.pageTitle} | victorvazquez.dev`;
}
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <meta name="og:title" content="victorvazquez.dev" />
    <meta name="og:description" content="Software Developer" />
    <meta
      name="keywords"
      content="web development, react, developer, node, javascript, typescript"
    />

    <title>{pageTitle}</title>
  </head>
  <body
    class="bg-neutral-900 text-slate-100 w-full lg:w-2/3 m-0 px-2 md:px-8 lg:m-auto py-10 space-y-16"
  >
    <Header />
    <main class="space-y-8">
      <slot />
    </main>
    <Footer />
  </body>
</html>
